<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>IdentityManagementSystem</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Authentication</servlet-name>
    <servlet-class>com.sushant.login.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ViewAddServlet</servlet-name>
    <servlet-class>com.sushant.login.controller.ViewAddServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ManipulateUserServlett</servlet-name>
    <servlet-class>com.sushant.login.controller.ManipulateUserServlett</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateUserServlet</servlet-name>
    <servlet-class>com.sushant.login.controller.UpdateUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateUserServlet</servlet-name>
    <url-pattern>/UpdateUserServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ManipulateUserServlett</servlet-name>
    <url-pattern>/ManipulateUserServlett</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewAddServlet</servlet-name>
    <url-pattern>/ViewAddServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Authentication</servlet-name>
    <url-pattern>/authenticate</url-pattern>
  </servlet-mapping>
</web-app>